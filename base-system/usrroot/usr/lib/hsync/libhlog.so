log(){
	echo -e "[$(date)] $1" | tee -a /var/log/hsync.log
}

log_start(){
	echo -e "


	------------------------------------------------------------------------------
	Starting huronOS hsync service
	" | tee -a /var/log/hsync.log
}

log_end(){
	echo -e "
	
	End of huronOS hsync service
	------------------------------------------------------------------------------


	" | tee -a /var/log/hsync.log
}

log_aufs_branches(){
	auls
}
